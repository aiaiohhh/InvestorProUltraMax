# ===========================================
# InvestorProUltraMax Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your API keys

# ===========================================
# Feature Flags
# ===========================================
# Set to 'true' to use real API data instead of mock data
NEXT_PUBLIC_USE_REAL_DATA=false

# ===========================================
# Free Tier API Keys
# Register for free API keys at the respective websites
# ===========================================

# Alpha Vantage (https://www.alphavantage.co/support/#api-key)
# Free tier: 5 calls/minute, 500 calls/day
NEXT_PUBLIC_ALPHA_VANTAGE_KEY=your_alpha_vantage_api_key_here

# FRED API (https://fred.stlouisfed.org/docs/api/api_key.html)
# Free tier: 120 calls/minute
NEXT_PUBLIC_FRED_API_KEY=your_fred_api_key_here

# IEX Cloud (https://iexcloud.io/console/tokens)
# Free tier: 50,000 messages/month
NEXT_PUBLIC_IEX_CLOUD_KEY=your_iex_cloud_api_key_here

# Finnhub (https://finnhub.io/register)
# Free tier: 60 calls/minute
NEXT_PUBLIC_FINNHUB_KEY=your_finnhub_api_key_here

# NewsAPI (https://newsapi.org/register)
# Free tier: 100 requests/day
NEXT_PUBLIC_NEWSAPI_KEY=your_newsapi_key_here

# ===========================================
# No API Key Required (Free Public APIs)
# ===========================================
# Yahoo Finance - No key required
# SEC EDGAR - No key required (public data)
# CoinGecko - No key required for free tier
# Reddit API - No key required for read-only

# ===========================================
# Infrastructure (Optional)
# ===========================================

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# ===========================================
# Email Service (for newsletter delivery)
# ===========================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
# OR
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

# ===========================================
# Payment Processing (Stripe)
# ===========================================
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ===========================================
# Database (for production)
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/ipum

# ===========================================
# Authentication
# ===========================================
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000
